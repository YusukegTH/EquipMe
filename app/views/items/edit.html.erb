<div class="container">
  <h1>Edit Item</h1>

  <%= form_with(model: @item, local: true, html: { class: 'needs-validation', novalidate: '' }) do |form| %>
    <% if @item.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h4>
        <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group form-check">
      <%= form.check_box :availability, class: 'form-check-input' %>
      <%= form.label :availability, class: 'form-check-label' %>
    </div>

    <div class="form-group">
      <%= form.label :picture %>
      <%= form.file_field :picture, class: 'form-control-file' %>
    </div>

    <div class="actions">
      <%= form.submit 'Update Item', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', items_path, class: 'btn btn-secondary mt-3' %>
</div>
