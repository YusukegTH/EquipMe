<div class='container p-3'>
  <div class="m-3 rounded-4 d-flex flex-row justify-content-between">

    <div class="item-details-left">
      <div class="image-container">
        <%= image_tag @item.picture, class: 'img-fluid' %>
      </div>
    </div>


    <div class="item-details-center">
      <div class="card-body p-3">
        <h2 class='card-title'><%= @item.name %></h2>
        <p class="card-text mt-0 mb-4"><strong>Category:</strong> <%= @item.category %></p>
        <p class="card-text"><%= @item.description %></p>
      </div>
      <div class="item-details-center-bottom">
      <div class="line"></div>
        <div class="d-flex justify-content-between p-3">
          <p class="card-text"><strong>Address:</strong> <%= @item.address %></p>
          <p class="card-text"><strong>User:</strong> <%= @item.user.first_name %></p>
        </div>
      </div>
    </div>

    <div class="create-container d-flex justify-content-end col-3">
      <div class="item-details-right p-3 col-10">
        <div class="d-flex justify-content-between col-8 m-0">
          <p class="card-availability" style="color: <%= @item.availability == true ? 'green' : '#8B0000' %>;"><%= @item.availability ? 'Available' : 'Unavailable' %></p>
          <p class="card-price"><strong></strong> <%= @item.price %>â‚¬</p>
        </div>
        <%= link_to "Book Now", new_item_booking_path(@item), class: "button-new btn btn-primary rounded" %>
      </div>
    </div>

  </div>


  <div class="map-container m-3 rounded">
    <div id="map" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" data-controller="map" data-map-target="map" style="height: 400px; width: 100%;"></div>
  </div>
</div>
