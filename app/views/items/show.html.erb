<div id="map" style="height: 400px; width: 100%;"></div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var latitude = <%= @item.latitude %>;
    var longitude = <%= @item.longitude %>;
    initMap(latitude, longitude);
  });
</script>
