<div class="banner img-fluid">
  <div class="row justify-content-center">
    <div class="col-auto my-3">
      <%= form_with url: root_path, method: :get, local: true, class: "search-form", id: "search-form" do |form| %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control search-input",
        placeholder: "Type a keyword"
        %>
        <%= button_tag(type: 'submit', class: "btn search-button") do %>
          <i class="fa fa-search"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-auto">
      <h1 class="text-center">Welcome to EquipMe</h1>
    </div>
  </div>
</div>



<% if params[:query].present? %>
  <% if @items.present? %>

    <div class="p-3 m-4"> <h2 class="m-0">Search Results</h2></div>
    <div class="container-fluid d-flex flex-nowrap justify-content p-3">
      <% @items.each do |item| %>
        <div class="space-search p-3">

          <div class="index-item-card rounded-4">
          <%= link_to item_path(item) do %>
            <div><%= image_tag item.picture, class: 'index-card-img-top rounded-top-4' %> </div>
          <% end %>
              <div class="card-elements p-2 rounded-bottom-4">
                <div class="d-flex justify-content-between p-1">
                  <p class="card-title"><%= item.name %></p>
                  <p class="card-price"><%= item.price %>€</p>
                </div>
                <div class="d-flex justify-content-between p-1">
                  <p class="card-user m-1"> From <%= item.user.first_name %></p>
                  <p data-controller="availablecolor" data-target="status" class="card-availibitly m-1"><%= item.availability %></p>
                </div>
              </div>

          </div>
        </div>
      <% end %>
    </div>
  <% else %>

      <div class="row p-3 m-4"><h2 class="m-0">No results found</h2></div>
  <% end %>
<% else %>



  <div class="p-3 m-4"> <h2 class="m-0">Check the Items</h2></div>
  <div class="container-fluid d-flex flex-wrap justify-content p-3">
    <% @items.each do |item| %>
      <div class="space p-3">

      <%= link_to item_path(item) do %>
        <div class="index-item-card rounded-4">
          <div><%= image_tag item.picture, class: 'index-card-img-top rounded-top-4' %> </div>
            <div class="card-elements p-2 rounded-bottom-4">
              <div class="d-flex justify-content-between p-1">
                <p class="card-title"><%= item.name %></p>
                <p class="card-price"><%= item.price %>€</p>
              </div>
              <div class="d-flex justify-content-between p-1">
                <p class="card-user m-1"> From <%= item.user.first_name %></p>
                <p data-controller="availablecolor" data-target="status" class="card-availibitly m-1"><%= item.availability %></p>
              </div>
            </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>


<% end %>
