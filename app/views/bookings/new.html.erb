<div class="container text-center p-3">
  <h1>New booking</h1>

  <div class="d-flex flex-column p-3 align-items-center">

      <div class="index-item-card rounded-4">
        <div><%= cl_image_tag @item.picture.key, class: 'index-card-img-top rounded-top-2' %> </div>
        <div class="card-elements p-2 rounded-bottom-2">
          <div class="d-flex justify-content-between p-1">
            <p class="card-title"><%= @item.name %></p>
            <p class="card-price"><%= @item.price %>â‚¬</p>
          </div>
          <div class="d-flex justify-content-between p-1">
            <p class="card-user m-1"> From <%= @item.user.first_name %></p>
            <p class="card-availability m-1" style="color: <%= @item.availability == true ? 'green' : '#8B0000' %>;"><%= @item.availability ? 'Available' : 'Unavailable' %></p>
          </div>
        </div>
      </div>



  </div>
  <div class="d-flex flex-column align-items-center">
    <%= simple_form_for [@item, @booking] do |f| %>
      <%= f.error_notification %>
      <%= f.input :start_date, as: :string, input_html: { data: { controller: 'datepicker' } }  %>
      <%= f.input :end_date, as: :string, input_html: { data: { controller: 'datepicker' } } %>
      <%= f.button :submit %>
    <% end %>
  </div>
    <div>
      <%= link_to 'Back', root_path, class: 'btn btn-secondary mt-3' %>
    </div>
</div>
