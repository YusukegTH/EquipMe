<div class="container text-center">
  <h1>Edit booking</h1>

  <div class="d-flex flex-column align-items-center">
    <div class="card m-1 col-3 border rounded-4 shadow-sm">
      <%= cl_image_tag @booking.item.picture.key, class: 'card-img-top rounded-top-4' %>
      <div class="card-body rounded-bottom">
        <div class="d-flex justify-content-between">
          <h5 class="card-title"><%= @booking.item.name %></h5>
          <p class="card-price"><%= @booking.item.price %>â‚¬</p>
        </div>
        <p class="card-availibitly">Availability: <%= @booking.item.availability %></p>
      </div>
    </div>

  </div>
  <div class="d-flex flex-column align-items-center">
    <%= simple_form_for(@booking) do |f| %>
      <%= f.input :start_date, as: :string, input_html: { data: { controller: 'datepicker' } }  %>
      <%= f.input :end_date, as: :string, input_html: { data: { controller: 'datepicker' } } %>
      <%= f.button :submit %>
    <% end %>
  </div>

    <div>
      <%= link_to 'Back', root_path, class: 'btn btn-secondary mt-3' %>
    </div>
</div>
